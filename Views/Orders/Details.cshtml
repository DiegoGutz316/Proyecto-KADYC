@model Proyecto_v1.Models.Order

@{
    ViewData["Title"] = $"Orden #{Model.Id.ToString("D6")}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/crud-responsive.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/orders-styles.css" asp-append-version="true" />

<div class="crud-container">
    <!-- Header -->
    <div class="crud-header">
        <h1 class="crud-title">
            <i class="fas fa-receipt"></i>
            Orden #@Model.Id.ToString("D6")
        </h1>
        <div class="crud-actions">
            <a asp-action="Index" class="crud-btn crud-btn--secondary">
                <i class="fas fa-arrow-left"></i>
                Volver a Mis Compras
            </a>
            <a asp-action="Invoice" asp-route-id="@Model.Id" class="crud-btn crud-btn--primary">
                <i class="fas fa-file-invoice"></i>
                Ver Factura
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="order-details-grid">
        <!-- Información de la orden -->
        <div class="details-card">
            <div class="details-card-header">
                <i class="fas fa-info-circle"></i>
                <h3>Información de la Orden</h3>
            </div>
            <div class="details-card-body">
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="fas fa-hashtag"></i>
                        Número de Orden:
                    </span>
                    <span class="detail-value">#@Model.Id.ToString("D6")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="fas fa-calendar"></i>
                        Fecha de Pedido:
                    </span>
                    <span class="detail-value">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="fas fa-undo"></i>
                        Fecha Límite de Devolución:
                    </span>
                    <span class="detail-value">@Model.DevolutionDate.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="fas fa-info-circle"></i>
                        Estado:
                    </span>
                    <span class="detail-value">
                        @{
                            var statusClass = Model.Status.ToLower() switch
                            {
                                "pendiente" => "status-badge--warning",
                                "procesando" => "status-badge--info",
                                "enviado" => "status-badge--primary",
                                "entregado" => "status-badge--success",
                                "cancelada" => "status-badge--danger",
                                _ => "status-badge--secondary"
                            };
                            var statusIcon = Model.Status.ToLower() switch
                            {
                                "pendiente" => "fas fa-clock",
                                "procesando" => "fas fa-cog fa-spin",
                                "enviado" => "fas fa-truck",
                                "entregado" => "fas fa-check",
                                "cancelada" => "fas fa-times",
                                _ => "fas fa-question"
                            };
                        }
                        <span class="status-badge @statusClass">
                            <i class="@statusIcon"></i> @Model.Status
                        </span>
                    </span>
                </div>
            </div>
        </div>

        <!-- Información del cliente -->
        <div class="details-card">
            <div class="details-card-header">
                <i class="fas fa-user"></i>
                <h3>Información del Cliente</h3>
            </div>
            <div class="details-card-body">
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="fas fa-user"></i>
                        Nombre:
                    </span>
                    <span class="detail-value">@Model.Customer?.FirstName @Model.Customer?.LastName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="fas fa-envelope"></i>
                        Email:
                    </span>
                    <span class="detail-value">@Model.Customer?.Email</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">
                        <i class="fas fa-map-marker-alt"></i>
                        Dirección:
                    </span>
                    <span class="detail-value">@Model.Customer?.Address</span>
                </div>
            </div>
        </div>

        <!-- Resumen financiero -->
        <div class="details-card">
            <div class="details-card-header">
                <i class="fas fa-calculator"></i>
                <h3>Resumen Financiero</h3>
            </div>
            <div class="details-card-body">
                <div class="detail-row">
                    <span class="detail-label">Subtotal:</span>
                    <span class="detail-value">₡@Model.SubTotal.ToString("N0")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">IVA (13%):</span>
                    <span class="detail-value">₡@Model.IVA.ToString("N0")</span>
                </div>
                <div class="detail-row total-row">
                    <span class="detail-label"><strong>Total:</strong></span>
                    <span class="detail-value total-amount"><strong>₡@Model.Total.ToString("N0")</strong></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos de la orden - SECCIÓN MEJORADA -->
    <div class="details-card products-section" style="margin-top: 2rem;">
        <div class="details-card-header">
            <i class="fas fa-shopping-bag"></i>
            <h3>Productos Ordenados (@(Model.OrderDetails?.Count ?? 0) productos)</h3>
        </div>
        <div class="details-card-body">
            @if (Model.OrderDetails?.Any() == true)
            {
                <div class="order-products-container">
                    <!-- Vista mejorada para productos -->
                    <div class="products-grid">
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <div class="product-order-card">
                                <div class="product-order-image">
                                    @if (!string.IsNullOrEmpty(detail.Product?.ImageUrl))
                                    {
                                        <img src="@detail.Product.ImageUrl" alt="@detail.Product?.Name" class="product-img" />
                                    }
                                    else
                                    {
                                        <div class="no-image-placeholder">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                    <div class="quantity-overlay">
                                        <span class="quantity-badge">@detail.Quantity</span>
                                    </div>
                                </div>
                                <div class="product-order-info">
                                    <h4 class="product-title">@detail.Product?.Name</h4>
                                    <div class="product-category">
                                        <i class="fas fa-tag"></i>
                                        @detail.Product?.Category?.Name
                                    </div>
                                    @if (!string.IsNullOrEmpty(detail.Product?.Size))
                                    {
                                        <div class="product-size">
                                            <i class="fas fa-ruler"></i>
                                            Talla: @detail.Product.Size
                                        </div>
                                    }
                                    <div class="product-description">
                                        @detail.Product?.Description
                                    </div>
                                    <div class="product-pricing">
                                        <div class="unit-price">
                                            <span class="price-label">Precio unitario:</span>
                                            <span class="price-value">₡@detail.Price.ToString("N0")</span>
                                        </div>
                                        <div class="total-price">
                                            <span class="price-label">Subtotal:</span>
                                            <span class="price-value total">₡@detail.SubTotal.ToString("N0")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Vista compacta para móviles -->
                    <div class="products-list-mobile d-md-none">
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <div class="product-mobile-card">
                                <div class="product-mobile-image">
                                    @if (!string.IsNullOrEmpty(detail.Product?.ImageUrl))
                                    {
                                        <img src="@detail.Product.ImageUrl" alt="@detail.Product?.Name" />
                                    }
                                    else
                                    {
                                        <div class="no-image-small">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </div>
                                <div class="product-mobile-details">
                                    <h6 class="product-mobile-title">@detail.Product?.Name</h6>
                                    <div class="product-mobile-meta">
                                        <span class="category-tag">@detail.Product?.Category?.Name</span>
                                        @if (!string.IsNullOrEmpty(detail.Product?.Size))
                                        {
                                            <span class="size-tag">Talla: @detail.Product.Size</span>
                                        }
                                    </div>
                                    <div class="product-mobile-pricing">
                                        <div class="mobile-price-row">
                                            <span>₡@detail.Price.ToString("N0") × @detail.Quantity</span>
                                            <strong>₡@detail.SubTotal.ToString("N0")</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Resumen de productos -->
                <div class="products-summary">
                    <div class="summary-stats">
                        <div class="stat-item">
                            <i class="fas fa-boxes"></i>
                            <span class="stat-value">@Model.OrderDetails.Count</span>
                            <span class="stat-label">Productos diferentes</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-calculator"></i>
                            <span class="stat-value">@Model.OrderDetails.Sum(d => d.Quantity)</span>
                            <span class="stat-label">Unidades totales</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-dollar-sign"></i>
                            <span class="stat-value">₡@Model.SubTotal.ToString("N0")</span>
                            <span class="stat-label">Valor productos</span>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="empty-products">
                    <i class="fas fa-box-open"></i>
                    <h4>No hay productos en esta orden</h4>
                    <p class="text-muted">Esta orden no contiene productos.</p>
                </div>
            }
        </div>
    </div>

    <!-- Acciones -->
    <div class="form-actions" style="margin-top: 2rem;">
        <a asp-action="Invoice" asp-route-id="@Model.Id" class="crud-btn crud-btn--primary">
            <i class="fas fa-file-invoice"></i>
            Descargar Factura
        </a>
        
        @if (Model.Status == "Pendiente")
        {
            <form method="post" asp-action="CancelOrder" asp-route-id="@Model.Id" class="d-inline">
                <button type="submit" class="crud-btn crud-btn--danger" 
                        onclick="return confirm('¿Estás seguro de que quieres cancelar esta orden?')">
                    <i class="fas fa-ban"></i>
                    Cancelar Orden
                </button>
            </form>
        }
        
        <a asp-controller="Home" asp-action="ViewProducts" class="crud-btn crud-btn--outline">
            <i class="fas fa-shopping-cart"></i>
            Comprar de Nuevo
        </a>
        
        <a asp-action="Index" class="crud-btn crud-btn--secondary">
            <i class="fas fa-list"></i>
            Ver Todas Mis Compras
        </a>
    </div>
</div>