@model Proyecto_v1.Models.Customer

@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/crud-responsive.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/profile-styles.css" asp-append-version="true" />

<div class="crud-container">
    <!-- Header -->
    <div class="crud-header">
        <h1 class="crud-title">
            <i class="fas fa-user-circle"></i>
            Mi Perfil
        </h1>
        <div class="crud-actions">
            <a asp-action="Index" class="crud-btn crud-btn--secondary">
                <i class="fas fa-arrow-left"></i>
                Volver a Mis Compras
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="form-container">
        <form asp-action="UpdateProfile" method="post">
            <div class="form-grid">
                <!-- Información Personal -->
                <div class="form-section">
                    <div class="form-section-header">
                        <i class="fas fa-user"></i>
                        <h3>Información Personal</h3>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="fas fa-user"></i>
                                    Nombre *
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Ingresa tu nombre" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName" class="form-label">
                                    <i class="fas fa-user"></i>
                                    Apellidos
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Ingresa tus apellidos" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i>
                            Email
                        </label>
                        <input asp-for="Email" class="form-control" readonly disabled />
                        <small class="form-text text-muted">
                            El email no se puede cambiar. Es el mismo de tu cuenta de usuario.
                        </small>
                    </div>
                </div>

                <!-- Información de Entrega -->
                <div class="form-section">
                    <div class="form-section-header">
                        <i class="fas fa-map-marker-alt"></i>
                        <h3>Información de Entrega</h3>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-home"></i>
                            Dirección Completa *
                        </label>
                        <textarea asp-for="Address" class="form-control" rows="3" 
                                  placeholder="Provincia, cantón, distrito, señas exactas..." required></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Proporciona una dirección completa y detallada para garantizar la entrega correcta de tus pedidos.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="form-actions">
                <button type="submit" class="crud-btn crud-btn--primary">
                    <i class="fas fa-save"></i>
                    Guardar Cambios
                </button>
                
                <a asp-action="Index" class="crud-btn crud-btn--secondary">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
                
                <a asp-controller="Cart" asp-action="Index" class="crud-btn crud-btn--outline">
                    <i class="fas fa-shopping-cart"></i>
                    Ver Carrito
                </a>
            </div>
        </form>
    </div>

    <!-- Información adicional -->
    <div class="info-cards">
        <div class="info-card">
            <div class="info-card-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="info-card-content">
                <h4>Privacidad Segura</h4>
                <p>Tu información personal está protegida y solo se usa para procesar tus pedidos y entregas.</p>
            </div>
        </div>
        
        <div class="info-card">
            <div class="info-card-icon">
                <i class="fas fa-truck"></i>
            </div>
            <div class="info-card-content">
                <h4>Entregas Precisas</h4>
                <p>Una dirección completa nos ayuda a entregar tus pedidos de manera rápida y segura.</p>
            </div>
        </div>
        
        <div class="info-card">
            <div class="info-card-icon">
                <i class="fas fa-edit"></i>
            </div>
            <div class="info-card-content">
                <h4>Actualización Flexible</h4>
                <p>Puedes actualizar tu información en cualquier momento desde esta página.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}