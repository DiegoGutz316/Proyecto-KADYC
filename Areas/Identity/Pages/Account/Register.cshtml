@page
@model Proyecto_v1.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] — KADYC</title>
    <meta name="description" content="Crear cuenta en KADYC - Tu tienda de moda minimalista" />
    
    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-modern.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    <!-- Botón volver al inicio -->
    <a href="/" class="back-to-home">
        <i class="fas fa-arrow-left"></i>
        Volver al inicio
    </a>

    <div class="auth-container register-container">
        <!-- Panel del formulario -->
        <div class="auth-form-panel">
            <div class="auth-header">
                <div class="auth-logo">KADYC</div>
                <h1 class="auth-title">@ViewData["Title"]</h1>
                <p class="auth-subtitle">Únete a nuestra comunidad de moda minimalista</p>
            </div>

            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating">
                        <select asp-for="Input.Role" class="form-control">
                            <option value="">Seleccionar tipo de cuenta</option>
                            <option value="Admin">Administrador</option>
                            <option value="Cliente">Cliente</option>
                        </select>
                        <label asp-for="Input.Role">Tipo de cuenta</label>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>
                    
                    <button id="registerSubmit" type="submit" class="auth-btn">
                        Crear Cuenta
                    </button>
                </form>
            </section>

            <div class="auth-links">
                <p>
                    ¿Ya tienes una cuenta? 
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                        Iniciar sesión
                    </a>
                </p>
            </div>
        </div>

        <!-- Panel de información -->
        <div class="auth-info-panel">
            <div class="auth-info-content">
                <h2 class="auth-info-title">Únete a KADYC</h2>
                <p class="auth-info-text">
                    Crea tu cuenta y disfruta de una experiencia de compra personalizada en nuestra tienda de moda minimalista.
                </p>
                
                <ul class="auth-info-features">
                    <li>
                        <i class="fas fa-user-check"></i>
                        Cuenta personal segura
                    </li>
                    <li>
                        <i class="fas fa-shopping-bag"></i>
                        Carrito de compras permanente
                    </li>
                    <li>
                        <i class="fas fa-bell"></i>
                        Notificaciones de ofertas
                    </li>
                    <li>
                        <i class="fas fa-crown"></i>
                        Acceso a colecciones exclusivas
                    </li>
                </ul>
            </div>
            
            <div class="auth-decorative-image" style="background-image: url('https://i.pinimg.com/736x/d3/9a/1b/d39a1bde4cffa143b3fa2d506abcd61a.jpg');"></div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mejorar la experiencia del formulario
            const form = document.getElementById('registerForm');
            const submitBtn = document.getElementById('registerSubmit');
            
            // Añadir estado de carga al botón
            form.addEventListener('submit', function() {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creando cuenta...';
                submitBtn.disabled = true;
            });
            
            // Mejorar campos floating labels
            const floatingInputs = document.querySelectorAll('.form-floating .form-control');
            floatingInputs.forEach(input => {
                // Verificar si hay valor inicial
                if (input.value) {
                    input.classList.add('has-value');
                }
                
                input.addEventListener('input', function() {
                    if (this.value) {
                        this.classList.add('has-value');
                    } else {
                        this.classList.remove('has-value');
                    }
                });
            });
            
            // Focus automático en el primer campo
            const firstInput = document.querySelector('.form-floating .form-control');
            if (firstInput && !firstInput.value) {
                setTimeout(() => firstInput.focus(), 100);
            }
        });
    </script>
</body>
</html>