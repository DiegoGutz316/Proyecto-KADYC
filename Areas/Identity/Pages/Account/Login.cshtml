@page
@model Proyecto_v1.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] — KADYC</title>
    <meta name="description" content="Iniciar sesión en KADYC - Tu tienda de moda minimalista" />
    
    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-modern.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    <!-- Botón volver al inicio -->
    <a href="/" class="back-to-home">
        <i class="fas fa-arrow-left"></i>
        Volver al inicio
    </a>

    <div class="auth-container">
        <!-- Panel del formulario -->
        <div class="auth-form-panel">
            <div class="auth-header">
                <div class="auth-logo">KADYC</div>
                <h1 class="auth-title">@ViewData["Title"]</h1>
                <p class="auth-subtitle">Accede a tu cuenta para continuar</p>
            </div>

            <section>
                <form id="account" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Mantener sesión iniciada
                        </label>
                    </div>
                    
                    <button id="login-submit" type="submit" class="auth-btn">
                        Iniciar Sesión
                    </button>
                </form>
            </section>

            <div class="auth-links">
                <p>
                    ¿No tienes una cuenta? 
                    <a id="register-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                        Crear cuenta nueva
                    </a>
                </p>
            </div>
        </div>

        <!-- Panel de información -->
        <div class="auth-info-panel">
            <div class="auth-info-content">
                <h2 class="auth-info-title">Bienvenido de vuelta</h2>
                <p class="auth-info-text">
                    Accede a tu cuenta personal de KADYC y descubre nuestra colección exclusiva de moda minimalista.
                </p>
                
                <ul class="auth-info-features">
                    <li>
                        <i class="fas fa-shopping-bag"></i>
                        Carrito de compras personal
                    </li>
                    <li>
                        <i class="fas fa-heart"></i>
                        Lista de productos favoritos
                    </li>
                    <li>
                        <i class="fas fa-truck"></i>
                        Seguimiento de pedidos
                    </li>
                    <li>
                        <i class="fas fa-star"></i>
                        Ofertas exclusivas
                    </li>
                </ul>
            </div>
            
            @* <div class="auth-decorative-image" style="background-image: url('https://i.pinimg.com/736x/4b/88/f4/4b88f47c2f019c91cd34437e627efab0.jpg');"></div> *@
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mejorar la experiencia del formulario
            const form = document.getElementById('account');
            const submitBtn = document.getElementById('login-submit');
            
            // Añadir estado de carga al botón
            form.addEventListener('submit', function() {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Iniciando...';
                submitBtn.disabled = true;
            });
            
            // Mejorar campos floating labels
            const floatingInputs = document.querySelectorAll('.form-floating .form-control');
            floatingInputs.forEach(input => {
                // Verificar si hay valor inicial
                if (input.value) {
                    input.classList.add('has-value');
                }
                
                input.addEventListener('input', function() {
                    if (this.value) {
                        this.classList.add('has-value');
                    } else {
                        this.classList.remove('has-value');
                    }
                });
            });
            
            // Focus automático en el primer campo
            const firstInput = document.querySelector('.form-floating .form-control');
            if (firstInput && !firstInput.value) {
                setTimeout(() => firstInput.focus(), 100);
            }
        });
    </script>
</body>
</html>